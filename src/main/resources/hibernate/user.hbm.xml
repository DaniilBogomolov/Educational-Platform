<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.itis.models.User"
           table="user_info">
        <id name="id" type="java.lang.Long">
            <generator class="identity"/>
        </id>

        <property name="firstName" column="first_name"/>
        <property name="lastName" column="last_name"/>
        <property name="email" column="email"/>
        <property name="login"/>
        <property name="password"/>
        <property name="profilePhotoLink" column="photo"/>
        <property name="confirmed" column="is_confirmed"/>
        <property name="confirmCode" column="confirm_code"/>
        <property name="role">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.itis.models.Role</param>
                <param name="type">12</param>
            </type>
        </property>
    </class>
</hibernate-mapping>